<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121">

    <!-- Optional Background Image (semi-transparent) -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:contentDescription="Background"
        android:alpha="0.15" />

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="35dp">

        <!-- Search Bar -->
        <EditText
            android:id="@+id/editTextSearch"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Search for recipes..."
            android:paddingStart="25dp"
            android:paddingEnd="16dp"
            android:drawableStart="@android:drawable/ic_menu_search"
            android:drawablePadding="20dp"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:textColorHint="#CCCCCC"
            android:layout_marginBottom="16dp" />

        <!-- Scrollable Info -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- About Us -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About Us"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    app:fontFamily="@font/gustavo"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Discover and share your favorite recipes from around the world. We bring food lovers together in one app!"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="16dp" />

                <!-- Feature Image -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/kitchen"
                    android:layout_marginBottom="16dp" />

                <!-- What You Can Do -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="What You Can Explore"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    app:fontFamily="@font/gustavo"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Search and save your favorite meals\n• Discover recipes based on your preferences\n• Explore trending dishes and top-rated chefs"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="16dp" />

                <!-- Locations -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Popular Locations"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    app:fontFamily="@font/gustavo"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Bangkok Thailand\n• Manila Philippines\n• Tokyo Japan\n• Seoul South Korea"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    app:fontFamily="@font/emerge" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>
